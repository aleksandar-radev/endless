{
  "name": "endless",
  "version": "0.4.1",
  "description": "Endless Game",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:noobf": "vite build --mode noobf",
    "build:electron": "vite build --mode electron",
    "preview": "vite preview",
    "lint": "eslint . --ext .js",
    "obfuscate": "node obfuscate-dist.js",
    "electron": "electron electron-main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "simple-crypto-js": "^3.0.1"
  },
  "devDependencies": {
    "dotenv": "^17.0.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.0",
    "javascript-obfuscator": "^4.1.1",
    "terser": "^5.43.1",
    "vite": "^7.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "build": {
    "appId": "ghost-team.endless",
    "productName": "Endless",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    }
  }
}